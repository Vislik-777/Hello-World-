using System;

public class Car
{
    private int speed;

    public string Model { get; set; } = "Unknown";

    public int Speed
    {
        get { return speed; }
        set
        {
            if (value >= 0 && value <= 300)
            {
                speed = value;
            }
            else
            {
                Console.WriteLine($"Скорость не может превышать 300!");
                speed = 0;
            }
        }
    }

    public Car(string model, int speed)
    {
        Model = model;
        Speed = speed;
    }

    public void Drive()
    {
        Console.WriteLine($"{Model} едет со скоростью {Speed} км/ч.");
    }

    public static void Main(string[] args)
    {
        Car myCar = new Car("BMW", 150);
        myCar.Drive();

        myCar.Speed = 400;
        myCar.Drive();

        myCar.Speed = -50;
        myCar.Drive();
    }
}
